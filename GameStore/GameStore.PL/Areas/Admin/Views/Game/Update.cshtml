@model UpdateGameVM

<form asp-action="Update" enctype="multipart/form-data" class="container" method="POST">
    <h2 class="my-4">Edit Game</h2>
    <div class="mb-3">
        <label class="form-label" asp-for="GameId"></label>
        <input class="form-control" asp-for="GameId" />
        <span class="text-danger" asp-validation-for="GameId"></span>
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="Name"></label>
        <input class="form-control" asp-for="Name" />
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="Description"></label>
        <input class="form-control" asp-for="Description" />
        <span class="text-danger" asp-validation-for="Description"></span>
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="Price"></label>
        <input class="form-control" asp-for="Price" />
        <span class="text-danger" asp-validation-for="Price"></span>
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="Thumbnail"></label>
        <input class="form-control-file" asp-for="Thumbnail" />
        <span class="text-danger" asp-validation-for="Thumbnail"></span>
    </div>
    @if (Model.ThumbnailPath != "")
    {
        <div class="mb-3">
            <span class="position-relative mr-2">
                <input type="hidden" asp-for="ThumbnailPath" />
                <img style="height: 150px" src="~/uploads/games/@Model.ThumbnailPath" alt="@Model.Name" />
                <a role="button"
                   style="position: absolute; right: 20px; top: -50px"
                   asp-action="DeleteThumbnail" asp-route-id="@Model.Id" asp-route-photo="@Model.ThumbnailPath">&#10006;</a>
            </span>
        </div>
    }

    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>